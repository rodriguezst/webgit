  "author": "rodriguezst <git@rodriguezst.es>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodriguezst/webgit.git"
  },
  "homepage": "https://github.com/rodriguezst/webgit#readme",
  "bugs": {
    "url": "https://github.com/rodriguezst/webgit/issues"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "express": "^4.18.2",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }

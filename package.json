{
  "name": "@rodriguezst_/webgit",
  "version": "1.0.1",
  "description": "A standalone Git viewer web client - browse your git repositories from the browser",
  "main": "src/server.js",
  "type": "module",
  "bin": {
    "webgit": "./bin/webgit.js"
  },
  "files": [
    "bin",
    "src",
    "public"
  ],
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "playwright test",
    "test:ui": "playwright test --ui"
